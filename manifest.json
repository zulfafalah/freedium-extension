{
  "manifest_version": 3,
  "name": "Freedium Bypass",
  "description": "Open Medium member-only articles in Freedium",
  "version": "1.0",
  "permissions": [],
  "host_permissions": [
    "*://*.medium.com/*",
    "*://medium.com/*"
  ],
  "content_scripts": [
    {
      "matches": ["*://*.medium.com/*", "*://medium.com/*"],
      "js": ["content.js"],
      "css": ["styles.css"],
      "run_at": "document_idle"
    }
  ],
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  }
}
